platform :ios, '13.0'

use_frameworks!

target 'LKButterfly' do
    pod 'Alamofire'
    pod 'AlamofireImage'
    pod 'KeychainAccess'
    pod 'UITextView+Placeholder', :modular_headers => true
    pod 'Cosmos', '~> 19.0'
    pod 'SearchTextField'
    pod 'RxSwift', '5.1.1'
    pod 'RxRelay', '5.1.1'
    pod 'Starscream'
    pod 'DKImagePickerController/Core'
    pod 'DKImagePickerController/ImageDataManager'
    pod 'DKImagePickerController/Resource'
    pod 'IBPCollectionViewCompositionalLayout'
end

target 'LKButterflyTests' do
    pod 'Alamofire'
    pod 'KeychainAccess'
    pod 'RxSwift', '5.1.1'
    pod 'RxRelay', '5.1.1'
    pod 'Starscream'
end

post_install do |installer|
    installer.generated_projects.each do |project|
        project.targets.each do |target|
            target.build_configurations.each do |config|
                config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
            end
        end
    end
end
